import java.util.ArrayList;

public class FCFS 
{
	private ArrayList<Process> processes;
	private ArrayList<Process> values;
	private ArrayList<String> stringList;
	private static int QUANTA_MAX = 100;


	public FCFS(ArrayList<Process> processes)
	{
		this.processes = processes;
		stringList = new ArrayList<String>();
		values = new ArrayList<Process>();
		run();
	}

	public ArrayList<String> getStringList()
	{
		return stringList;
	}

	public ArrayList<Process> getValues()
	{
		return values;
	}

	private void run()
	{
		int quantaCount =0;

		while(!processes.isEmpty() && quantaCount <= QUANTA_MAX)
		{
			Process process = processes.remove(0);

			while(process.getArrivalTime() > quantaCount)
			{
				stringList.add("");
				quantaCount++;
			}

			process.setActualTime(quantaCount);

			while(process.getRunTime() >0)
			{
				stringList.add(process.getName());
				process.decrementExpectedTotalRunTime();
				process.incrementQuanta();
				process.setEndTime(quantaCount);
				quantaCount++;
			}
			values.add(process);
		}
	}
}
